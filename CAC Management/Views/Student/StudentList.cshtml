@model List<CAC_Management.Models.Student>
@{
    ViewData["Title"] = "Student List";
    Layout = "_LayoutForAdmin";
}

<h1 style="text-align:center">Student Information List</h1>

<div class="container" style="width: 20%;">
    <div class="form-group">
        <div class="input-group-addon">
            <form asp-controller="Student" asp-action="Search">
                <input placeholder="Search By Id" class="form-control" name="id" />
                <a asp-controller="Student" asp-action="Search" asp-route-id="id"><input type="submit" value="Search" /></a>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="text-align:center; font-weight: bold;">Student Id</td>
                <td style="text-align:center; font-weight: bold;">Student Name</td>
                <td style="text-align:center; font-weight: bold;">Gender</td>
                <td style="text-align:center; font-weight: bold;">Address</td>
                <td style="text-align:center; font-weight: bold;">Contact</td>
                <td style="text-align:center; font-weight: bold;">Email</td>
                <td style="text-align:center; font-weight: bold;">Tution Fee</td>
                <td style="text-align:center; font-weight: bold;">Due Amount</td>
                <td style="text-align:center; font-weight: bold;">Payment Status</td>
                <td style="text-align:center; font-weight: bold;">Action</td>
            </tr>
        </thead>
        @foreach (var ac in Model)
        {
        <tr>
            <td style="text-align:center">@ac.StudentId</td>
            <td style="text-align:center">@ac.StudentName</td>
            <td style="text-align:center">@ac.Gender</td>
            <td style="text-align:center">@ac.Address</td>
            <td style="text-align:center">@ac.Contact</td>
            <td style="text-align:center">@ac.Email</td>
            <td style="text-align:center">@ac.TuitionFee</td>
            <td style="text-align:center">@ac.DueAmount</td>
            @if (ac.PaymentStatus == 0)
            {
                <td style="text-align:center">Paid</td>
            }
            else
            {
                <td style="text-align:center">Due</td>
            }
            <td style="text-align:center">
                <a asp-action="StudentDetails" asp-route-id="@ac.StudentId" class="btn btn-primary">Details</a>
                <a asp-action="EditStudent" asp-route-id="@ac.StudentId" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteStudent" asp-route-id="@ac.StudentId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
        }
    </table>
</div>
